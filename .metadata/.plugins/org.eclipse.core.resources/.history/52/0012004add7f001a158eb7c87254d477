import java.awt.BorderLayout;
import java.awt.GridLayout;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;
import javax.swing.JPanel;
import javax.swing.JTabbedPane;
import javax.swing.JTextArea;
import javax.swing.JTextField;

import view.ItemView;
import view.MainView;
import view.RecordView;
public class Fishing_Ground extends JFrame{
	//멤버변수 선언
	MainView mv;
	ItemView iv;
	RecordView rc;
	JButton [] main = new JButton[20];
	JButton [] item = new JButton[20];
	JLabel la;
	JTextField tf;
	JTextArea ta;
	Fishing_Ground(){
			super("실내낚시터");
		//객체 생성
			for(int i=0; i<20; i++) {
				main[i] = new JButton(String.valueOf(i));
			}
	}
	
	
	
	//메인화면구성
	void display() {
		JPanel p = new JPanel();
		p.setLayout(new GridLayout(4,5));
		for(int i=0; i<20; i++) {
			p.add(main[i]);
		}
		// 각 탭부여
		JTabbedPane pane = new JTabbedPane();
		pane.add("MainView",mv);
		pane.add("RecordView", rc);
		pane.add("ItemView",iv);
	
		// 화면출력
		setLayout(new BorderLayout());
		
		// CENTER에 탭화면
		add(pane,BorderLayout.CENTER);
	
		JPanel p1= new JPanel(new BorderLayout());
		//itemView에 주문목록 라벨 + 전체취소버튼
		JPanel p2 = new JPanel(new GridLayout(2,1));
		p2.add(new JLabel("주문목록"), BorderLayout.NORTH);
		
		// 화면사이즈
		setSize(1500,1400);
		setVisible(true);
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
	}
	public static void main(String[] args) {
		Fishing_Ground fg = new Fishing_Ground();
		fg.display();
		
	}

}
